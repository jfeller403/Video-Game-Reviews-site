@model ReviewsSite.Models.Review

@{
    ViewData["Title"] = "Confirm Delete";
}

<head>
    <link rel="stylesheet" href="~/css/Views/Review/Delete.css" />
</head>

@*<input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />*@
<h2>Are you sure you want to delete this review?</h2>
<div>
    <hr />
    <table id="delete">
        <thead>
            <tr>
                <th>
                    <h3> Game </h3>
                </th>
                </tr>
            <tr>
                <td id="videoGameName">
                    @Model.VideoGame.Name
                </td>
                </tr>
            <tr>

                <th>
                    <h3> Username</h3>
                </th>
                </tr>
            <tr>
                <td id="username">
                    @Model.Username
                </td>
            </tr>
            <tr>
                <th>
                    <h3> Rating </h3>
                </th>
            </tr>
            <tr>
                <td id="rating">
                    @Model.Rating
                </td>
            </tr>
            <tr>
                <th>
                    <h3> Comments </h3>
                </th>
            </tr>
            <tr>
                <td id="review">
                    @Model.Usercomment
                </td>
            </tr>
            <tr>
                <td id="DeleteLink">
                    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                </td>
            </tr>
        </thead>
    </table>
        
</div>
