@model IEnumerable<ReviewsSite.Models.VideoGame>

<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=DotGothic16" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inconsolata" />
</head>

@{
    ViewData["Title"] = "Index";
}

@section Styles{ 
    <link rel="stylesheet" href="~/css/Views/VideoGame/Index.css"/>
}

<h1>Welcome to GAMES REVIEW, where we review your games.</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h3>Video Game</h3>
            </th>
            <th>
                <h3>Release Date</h3>
                @*@Html.DisplayNameFor(model => model.ReleaseDate)*@
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Description)
            </th>*@
            <th>
                <p>

                </p>
                @*@Html.DisplayNameFor(model => model.PictureURL)*@
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.VideoURL)
            </th>*@
            <th>
                <p>

                </p>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/VideoGame/Details/@item.Id">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>*@
                <td>
                    <img src=@item.PictureURL width=50px>
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.VideoURL)
                </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a href="/Review/Index/@item.Id">Reviews</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

